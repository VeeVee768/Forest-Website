<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forest - formularz kontaktowy</title>
    <!-- @include 'fonts.kit' -->
    <!-- @include 'styles.kit' -->
</head>

<body class="contact-page">
    <!-- @include 'nav.kit' -->
    <!-- @include 'hero-bg.kit' -->

    <section class="section wrapper scrollspy-contact" id="contact">
        <h2 class="section-title">skontaktuj się z nami! <i class="fa-solid fa-envelope"></i></h2>

        <div class="contact-wrapper">
            <form class="contact-form">
                <div class="contact-box">
                    <label for="name">Imię i nazwisko:</label>
                    <input type="text" id="name" placeholder="Podaj imię i nazwisko">
                    <p class="error-text">error</p>
                </div>
                <div class="contact-box">
                    <label for="email">Email:</label>
                    <input type="email" id="email" placeholder="Podaj adres e-mail">
                    <p class="error-text">error</p>
                </div>
                <div class="contact-box">
                    <label for="message">Wiadomość:</label>
                    <textarea id="message" placeholder="Wpisz treść wiadomości"></textarea>
                    <p class="error-text">error</p>
                </div>

                <button class="btn send-btn">Wyślij</button>

                <div class="popup">
                    <p>Formularz został poprawnie wysłany</p>
                    <button class="btn close-btn">Zamknij</button>
                </div>

            </form>
        </div>


        <div class="contact-info">
            <h3 class="contact-title">kontakt <i class="fa-solid fa-phone"></i></h3>
            <p class="contact-mobile">+48 000 000 000</p>
            <p class="contact-email">forestgruop@mail.com</p>
        </div>

        <div class="contact-info">
            <h3 class="contact-title">adres firmy <i class="fa-solid fa-location-dot"></i></h3>
            <p class="contact-street">ul.Jasnogórska 2</p>
            <p class="contact-code">35-358 Kraków</p>
        </div>


        <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5119.796100177739!2d19.890269275407256!3d50.08819561338223!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165a326d015c3b%3A0x47a12cd367a1f34e!2sRestauracja%20McDonald&#39;s!5e0!3m2!1spl!2sde!4v1722242671309!5m2!1spl!2sde"
            height="450" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>

        <div class="contact-info">
            <h3 class="contact-title">social media</h3>
            <div class="social-media">
                <p><i class="fa-brands fa-square-facebook"></i></p>
                <p><i class="fa-brands fa-instagram"></i></p>
                <p><i class="fa-brands fa-x-twitter"></i></p>
            </div>
        </div>


    </section>

    <!-- @include 'footer.kit' -->


    <script src="https://kit.fontawesome.com/fec480bcf3.js" crossorigin="anonymous"></script>
    <script src="dist/js/main.min.js"></script>
</body>

</html>